<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Video Call</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body class="flex flex-col items-center justify-center min-h-screen bg-gray-100">

  <!-- Join -->
  <div id="join-screen" class="flex flex-col items-center space-y-3 p-6 bg-white shadow-md rounded-xl">
    <h2 class="text-xl font-semibold">Join Video Call</h2>
    <input id="username" type="text" placeholder="Enter your name"
      class="px-3 py-2 border rounded-md"/>
    <button id="joinBtn" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
      Join
    </button>
  </div>

  <!-- Video UI -->
  <div id="video-call" class="hidden w-full h-screen flex flex-col">
    <header class="bg-gray-800 text-white p-3 flex justify-between">
      <span id="local-name" class="font-bold"></span>
      <span id="remote-name" class="italic"></span>
    </header>
    <div class="flex-1 grid grid-cols-2 gap-2 p-4">
      <video id="localVideo" autoplay muted playsinline class="w-full h-full bg-black rounded-xl"></video>
      <video id="remoteVideo" autoplay playsinline class="w-full h-full bg-black rounded-xl"></video>
    </div>
  </div>

  <script src="/js/index.js"></script>
</body>
</html>
